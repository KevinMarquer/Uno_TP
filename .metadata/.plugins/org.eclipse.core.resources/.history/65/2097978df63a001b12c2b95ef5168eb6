	'SensDefini : true'
;

ChangementDonneur : 
	'ChangementDonneur : true'
;

VueDesCartesApres1erPose:
	'VueDesCartesApres1erPose : true'
;

DonneurPremierose:
	'DonneurPremierose : true'
;

JeuRapide:
	'JeuRapide : true'
;

Interception:
	'Interception : true'
;

DeuxCartesIdentiques:
	'DeuxCartesIdentiques : true'
;

DecisionCarte:
	'DecisionCarte : true'
;
Surenchere:
